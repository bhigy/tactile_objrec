<application>
	<name>Haptic data acquisition - SIM</name>
	
	<dependencies>
        <port>/icub/skin/left_hand_comp</port>
        <port>/icub/left_arm/state:o</port>
        <port>/icub/left_arm/analog:o</port>
    </dependencies>

    <!-- Modules -->
    
	<module>
        <name>botRpcServer</name>
        <parameters>--name actionsRenderingEngine --port rpc</parameters>
        <node>localhost</node>
        <tag>actionsRenderingEngine</tag>
    </module>
	
	<module>
        <name>grasper</name>  
        <node>localhost</node>
        <tag>grasper</tag>
    </module>

	<module>
        <name>fingersModel</name>  
        <node>localhost</node>
        <tag>fingersModel</tag>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /grasper/events</parameters>
        <node>localhost</node>
        <prefix>/dump</prefix>
        <tag>datadumper events</tag>
    </module>
    
    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /grasper/labels</parameters>
        <node>localhost</node>
        <prefix>/dump</prefix>
        <tag>datadumper events</tag>
    </module>
    
    <module>
		<name>yarpdatadumper</name>
		<parameters>--name /skin/left_hand</parameters>
		<node>localhost</node>
		<prefix>/dump</prefix>
		<tag>datadumpeur left_hand</tag>
	</module>
	
	<module>
		<name>yarpdatadumper</name>
		<parameters>--name /skin/left_hand_comp</parameters>
		<node>localhost</node>
		<prefix>/dump</prefix>
		<tag>datadumpeur left_hand_comp</tag>
	</module>
	
	<module>
		<name>yarpdatadumper</name>
		<parameters>--name /left_arm/state</parameters>
		<node>localhost</node>
		<prefix>/dump</prefix>
		<tag>datadumpeur left_arm/state:o</tag>
	</module>
	
	<module>
		<name>yarpdatadumper</name>
		<parameters>--name /left_arm/analog</parameters>
		<node>localhost</node>
		<prefix>/dump</prefix>
		<tag>datadumpeur left_arm/analog:o</tag>
	</module>
	
	<module>
		<name>yarpdatadumper</name>
		<parameters>--name /model/springy</parameters>
		<node>localhost</node>
		<prefix>/dump</prefix>
		<tag>datadumpeur model/springy</tag>
	</module>
	
	<module>
		<name>yarpdatadumper</name>
		<parameters>--name /model/tactile</parameters>
		<node>localhost</node>
		<prefix>/dump</prefix>
		<tag>datadumpeur model/tactile</tag>
	</module>
	
    <!-- Connections --> 

    <!-- Grasper -->
	
    <connection>
        <from>/grasper/actions:io</from>
        <to>/actionsRenderingEngine/rpc</to>
        <protocol>tcp+send.portmonitor+file.event_monitor</protocol>
    </connection>
    
    <!-- Dumpers -->

	<connection>
        <from>/grasper/actions:io/events:o</from>
        <to>/dump/grasper/events</to>
    </connection>
    
    <connection>
        <from>/grasper/labels:o</from>
        <to>/dump/grasper/labels</to>
    </connection>
    
    <connection>
        <from>/icub/skin/left_hand_comp</from>
        <to>/dump/skin/left_hand</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.data_monitor</protocol>
    </connection>
    
    <connection>
        <from>/grasper/actions:io/events:o</from>
        <to>/dump/skin/left_hand</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.dump_controller</protocol>
    </connection>
    
    <connection>
        <from>/icub/skin/left_hand_comp</from>
        <to>/dump/skin/left_hand_comp</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.data_monitor</protocol>
    </connection>
    
    <connection>
        <from>/grasper/actions:io/events:o</from>
        <to>/dump/skin/left_hand_comp</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.dump_controller</protocol>
    </connection>
	
	<connection>
        <from>/icub/left_arm/state:o</from>
        <to>/dump/left_arm/state</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.data_monitor</protocol>
    </connection>
    
    <connection>
        <from>/grasper/actions:io/events:o</from>
        <to>/dump/left_arm/state</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.dump_controller</protocol>
    </connection>
    
    <connection>
        <from>/icub/left_arm/analog:o</from>
        <to>/dump/left_arm/analog</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.data_monitor</protocol>
    </connection>
    
    <connection>
        <from>/grasper/actions:io/events:o</from>
        <to>/dump/left_arm/analog</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.dump_controller</protocol>
    </connection>
    
    <connection>
        <from>/fingersModel/springy:o</from>
        <to>/dump/model/springy</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.data_monitor</protocol>
    </connection>
    
    <connection>
        <from>/grasper/actions:io/events:o</from>
        <to>/dump/model/springy</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.dump_controller</protocol>
    </connection>
    
    <connection>
        <from>/fingersModel/tactile:o</from>
        <to>/dump/model/tactile</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.data_monitor</protocol>
    </connection>
    
    <connection>
        <from>/grasper/actions:io/events:o</from>
        <to>/dump/model/tactile</to>
        <protocol>tcp+recv.portmonitor+type.lua+file.dump_controller</protocol>
    </connection>
        
</application>
